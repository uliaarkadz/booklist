<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs")%>
  <body>
    <%- include("./partials/nav.ejs")%>
    <h1>Booklist index</h1>
    <% for (let i = 0; i < books.length; ++i) { %>
    <div>
      <a href="/books/<%= books[i]._id %>"> <%= books[i].title %> </a>
      <p>click title to see more</p>
    </div>
    <form action="/books/<%= books[i]._id%>/?_method=DELETE" method="post">
      <input type="submit" value="Remove Book" />
    </form>
    <a href="/books/edit/<%= books[i]._id %>/">Edit <%= books[i].title %></a>
    <% } %>
  </body>
</html>
